{
    "manifest_version": 3,
    "name": "Blue List",
    "description": "Create a curated list of sites and control the time spent on them to boost productivity.",
    "version": "1.0.0",
    "icons": {
        "16" : "favicon-16x16.png",
        "48" : "favicon-48x48.png"  
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "blue list",
        "deafult_icon": "favicon-48x48.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at": "document_start",
            "js": ["contentScript.js"]
        }
    ],
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    }
}